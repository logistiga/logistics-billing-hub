#--------------------------------------------------------------------
# LOGISTIGA - Configuration Backend Laravel
#--------------------------------------------------------------------
# Copiez ce fichier en .env et remplissez les valeurs appropriées
# cp .env.example .env
# php artisan key:generate
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# APPLICATION
#--------------------------------------------------------------------
APP_NAME=LogistiGa
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Conakry
APP_URL=http://localhost:8000
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# URL du frontend (pour les liens dans les emails)
FRONTEND_URL=http://localhost:5173

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=logistiga
DB_USERNAME=root
DB_PASSWORD=

# Pour PostgreSQL, décommentez ci-dessous:
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=logistiga
# DB_USERNAME=postgres
# DB_PASSWORD=

#--------------------------------------------------------------------
# CACHE & SESSION
#--------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=logistiga_cache

#--------------------------------------------------------------------
# QUEUE
#--------------------------------------------------------------------
QUEUE_CONNECTION=database
# Pour Redis:
# QUEUE_CONNECTION=redis

#--------------------------------------------------------------------
# REDIS (optionnel)
#--------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------
# MAIL
#--------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@logistiga.com"
MAIL_FROM_NAME="${APP_NAME}"

# Pour Mailgun:
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# Pour SendGrid:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Pour développement (log les emails):
# MAIL_MAILER=log

#--------------------------------------------------------------------
# FILESYSTEM
#--------------------------------------------------------------------
FILESYSTEM_DISK=local

# Pour AWS S3:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------
# SANCTUM (API Authentication)
#--------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,127.0.0.1,127.0.0.1:8000,::1

#--------------------------------------------------------------------
# CORS
#--------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
# Durée de validité du token de réinitialisation de mot de passe (minutes)
PASSWORD_RESET_EXPIRE=60

# Durée de validité du token API (minutes, 0 = jamais)
API_TOKEN_EXPIRATION=0

# Nombre max de tentatives de login avant blocage
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=1

#--------------------------------------------------------------------
# BUSINESS SETTINGS
#--------------------------------------------------------------------
# Devise par défaut
DEFAULT_CURRENCY=GNF

# Taux de TVA par défaut
DEFAULT_TAX_RATE=18

# Délai de paiement par défaut (jours)
DEFAULT_PAYMENT_TERMS=30

# Préfixe des numéros de documents
INVOICE_PREFIX=FAC
DEVIS_PREFIX=DEV
ORDRE_PREFIX=OT
AVOIR_PREFIX=AV
NOTE_PREFIX=ND

#--------------------------------------------------------------------
# THRESHOLDS & ALERTS
#--------------------------------------------------------------------
# Seuil d'alerte solde bancaire bas
BANK_LOW_BALANCE_THRESHOLD=100000

# Seuil d'alerte solde caisse bas
CASH_LOW_BALANCE_THRESHOLD=50000

# Jours avant échéance pour rappel de paiement
PAYMENT_REMINDER_DAYS=7

#--------------------------------------------------------------------
# EXTERNAL SERVICES (optionnel)
#--------------------------------------------------------------------
# Google Maps API (pour géolocalisation)
# GOOGLE_MAPS_API_KEY=

# SMS Gateway (pour notifications SMS)
# SMS_GATEWAY_URL=
# SMS_GATEWAY_API_KEY=
# SMS_SENDER_ID=LogistiGa

#--------------------------------------------------------------------
# DEBUGGING (développement uniquement)
#--------------------------------------------------------------------
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false

#--------------------------------------------------------------------
# BROADCASTING (optionnel, pour temps réel)
#--------------------------------------------------------------------
BROADCAST_CONNECTION=log
# Pour Pusher:
# BROADCAST_CONNECTION=pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
